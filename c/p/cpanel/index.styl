body.cpanel
  overflow-y hidden
#cpanel
  bg m38 url(../i/cp/cp-bg.png)
  w 650px
  m 200px auto
  box-shadow b60 0 0 10px
  border-radius 5px 5px 0 0
  relative()
  z-index 2

  #top-bar
    h 16px
    background linear-gradient(top, m8, m40)
    box-shadow b70 0 1px 5px, inset b50 0 -1px 3px
    border-radius 4px 4px 0 0
    cursor pointer
    &:hover
      bg m30

    a#logout
      float right
      d block
      c m60
      r 16px
      lh 16px
      &:hover
        c m110

  #main-menu
    ul
      clearfix()
      li
        float left
        a
          d block
          w 103px
          h 31px
          box-shadow b75 0 1px 3px
          ti -999em
          bg url(../i/cp/main-menu.png) top left no-repeat

          &.active, &:active
            box-shadow #000 0 0 0

          &.home
            &:hover
              bgp 0 -31px
            &:active, &.active
              bgp 0 -62px
          &.profile
            bgp -103px 0
            &:hover
              bgp -103px -31px
            &:active, &.active
              bgp -103px -62px
          &.music
            bgp -206px 0
            &:hover
              bgp -206px -31px
            &:active, &.active
              bgp -206px -62px
          &.gallery
            bgp -309px 0
            &:hover
              bgp -309px -31px
            &:active, &.active
              bgp -309px -62px
          &.stats
            bgp -412px 0
            &:hover
              bgp -412px -31px
            &:active, &.active
              bgp -412px -62px
          &.account
            bgp -515px 0
            &:hover
              bgp -515px -31px
            &:active, &.active
              bgp -515px -62px
          &.minimize
            w 32px
            bgp -618px 0
            &:hover
              bgp -618px -31px
            &:active, &.active
              bgp -618px -62px

  #albums
    relative()
    p 19px 32px
    ul.albums
      clearfix()
      li.album
        float left
        r 175px
        relative()
        m 0 10px
        a
          d block
          r 175px
          bg url(../i/cp/album-bg.jpg)
          ti -999em
          box-shadow w7 0 1px 0
          &:hover
            bgp 0 -175px
        &.active a:after
          content ''
          d block
          r 190px
          absolute top -8px left -8px
          bg url(../i/cp/album-click.png)
    nav.nav
      a
        d block
        w 26px
        h 41px
        bg #000 url(../i/cp/album-nav.png)
        ti -999em
        absolute()
        z 100
        &.prev-set
          absolute top 85px left 8px
          &:hover
            bgp 0 -41px
          &:active
            bgp 0 -82px
        &.next-set
          absolute top 85px right 8px
          bgp 26px 0
          &:hover
            bgp 26px -41px
          &:active
            bgp 26px -82px
    menu.rollover
      d none
      transition()
      a
        d block
        w 26px
        h 24px
        bg #000 url(../i/cp/album-rollover.png)
        ti -999em
        &.add
          absolute top 18px right 8px
          &:hover
            bgp 0 -24px
          &:active
            bgp 0 -48px
        &.help
          absolute bottom 17px right 8px
          bgp 26px 0
          &:hover
            bgp 26px -24px
          &:active
            bgp 26px -48px
    &:hover
      menu.rollover
        d block

  #bottom-bar
    h 17px
    box-shadow b50 0 -1px 2px, inset w5 0 1px 0
    background #000 linear-gradient(top, w15, w1)
