a.spindal
  absolute top x
  transition 1s ease all
  d block

  &.show
    z 1
    h 64px
    w 45px
    bg url(../i/show-menu.png) left top no-repeat
    ti -999em
    left -45px
    &:hover, &:focus
      bgp 0 -64px
    &:active
      bgp 0 -128px
    &.active
      left 0

  &.hide
    right 0
    bg b50
    border-radius 2px 0 0 2px
    z 10
    w 41px
    h 60px
    o 0
    &:hover, &:focus
      bg b80
    &:active
      bg b90

header.artist:hover
  a.spindal.hide
    o 1
