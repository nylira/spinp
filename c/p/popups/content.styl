form
  div.help
    absolute top 13px right 7px
    w 14px
    h 15px
    span.icon
      d block
      w 14px
      f bold 11px/15px sans
      ta center
      c m111
      bg m60
      box-shadow #211d1e 0 -1px 0, inset w5 0 -1px 0
      border-radius 7px
      cursor pointer
    .ui-tooltip-top, .ui-tooltip-bottom
      z 1000
      opacity 0
      transition 250ms ease-in-out opacity
    .ui-tooltip-top
      fixed top -1000px right 0
    .ui-tooltip-bottom
      bottom -1000px
    &:hover
      .ui-tooltip-top
        absolute top 25px right -15px
        opacity 1
      .ui-tooltip-bottom
        absolute bottom 25px right -17px
        opacity 1

  ul.rows
    p 11px 9px 1px 3px
    clearfix()
    relative()
    li.row
      fl()
      m 0 14px 10px 0
      m 0 0 10px 14px
      lhh 40px
      w 491px
      border-radius 3px
      bg rgba(40,40,40,.7)
      box-shadow inset b37 0 1px 1px, inset b7 0 0 7px, w7 0 1px 0
      relative()
      clearfix()
      &.hover
        bg rgba(40,40,40,.5)
      &.disabled
        bg rgba(40,40,40,.8)
      .light
        absolute top 8px left 4px
      label
        f bold 13px/40px sans
        c m160
        text-shadow #000 0 -1px 0
        aa()
        position absolute
        left 28px + 2px
      input[type=text],
      input[type=email],
      input[type=number],
      input[type=password]
        bxs()
        position absolute
        top 8px
        left 28px
        right 26px
        bottom 8px
        b none
        h 24px
        p 6px .5em 5px
        f bold 13px/1 sans
        c #fff
        aa()
        bg m30
        box-shadow w7 0 1px 0, inset b37 0 1px 0, inset b7 0 0 7px
        border-radius 3px
      a.selectBox
        d block !important
        absolute top 2px right 28px
        w 98px
        h 24px
        bg m30
        border-radius 3px
        box-shadow w7 0 1px 0, inset b75 0 1px 1px, inset b13 0 0 7px
        pl 8px
        span
          &.selectBox-label
            lh 24px
          &.selectBox-arrow
            top 3px
            right 3px
      .help
        absolute top 13px right 7px

.popup
  .content
    clearfix()
    overflow visible
    .jspPane
      m 0 !important

  &.window
    .content
      h 360px

  &.slideshow
    .content
      overflow-y scroll
      
  &.message
    .content
      h 83px
      overflow visible
      .msg
        p 34px 0
        ta center
        relative()
        p
          f bold 15px/15px sans
          c #fff
          aa()
        .help
          absolute top 34px right 15px
