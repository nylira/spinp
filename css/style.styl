@import 'm/all'
@import 'd/all'

m = 13px

dfont()
  fs m
  lh 1.5
  ff sans
  color #333

link = #000
hover = link

a
  text-decoration none
  color link
  &:hover, &:focus
    color hover

html, body
  height 100%

body
  dfont()
  bg #000

@import 'p/a.show.hide.menu'
@import 'p/a.play.big'
@import 'p/menu.share'

#spindal
  bg w80
  width 245px
  position relative
  z-index 2
  min-height 100%

  header.artist
    pad 1em 2em
    position relative
    img.logo
      width 185px
      height 72px


    &:hover
      a.hide.menu
        display block

  section.albums
    position relative
    ul.albums
      li.album
        width 245px
        section.album.cover
          pad 0 m*2 m
          img
            square 189px
            border 2px solid #fff
            border-radius 2px
            box-shadow b45 2px 2px 4px
          ul.switch
            position absolute
            top 0
            left m*2
            square 189px
            transition()
            z-index 1000
            opacity 0
            &:hover
              opacity 1
            li
              a
                display block
                width 41px
                height 60px
                position absolute
                top 62px + 2px
                z-index 100
                text-indent -999em
                background b80 url(../i/album-nav-arrows.png) left top no-repeat
                transition()
                &.prev-album
                  left 2px
                  border-radius 0 2px 2px 0
                &.next-album
                  right -2px
                  background-position -41px 0
                  border-radius 2px 0 0 2px
                &:hover, &:focus
                  background-color hsla(212,78,47,.8)
                &:active
                  background-color hsla(212,78,47,.9)

        section.album.title
          pad 0 2em
          bg hsla(0,0,71,.8)
          box-shadow inset b10 0 0 5px
            
          h2
            font bold 1em/2 sans
          .data
            > ul
              font 11px/1.5 sans
              > li
                &.links
                  > a
                    float left
                    &.button
                      display inline-block
                      background linear-gradient(top, #3985c1, #0767b1)
                      border-radius 2px
                      font bold 12px/1.25 sans
                      pad 0 .8em
                      color #fff
                      font-smoothing()
                      text-shadow b40 0 -1px 0
                      border 1px solid b15
                      box-shadow b45 1px 1px 2px
            

        menu.tracks
          dl.tracks
            bt 1px solid b20
            bb 1px solid w40
            counter-reset tracknum
            dt
              bt 1px solid w40
              bb 1px solid b20
              pad 0 2em
              lh m*2 - 2px
              height m*2 - 2px
              cursor pointer
              white-space nowrap
              overflow hidden
              text-overflow ellipsis
              counter-increment tracknum
              position relative

              a.toggle
                position absolute
                text-indent -999em
                opacity 0
                &.play
                  display block
                  square 17px
                  left 5px
                  top 3px
                  background url(../i/icon-play-pause.png) top left no-repeat
                &.volume
                  square 17px
                  bg #000
                  right 2em
                  top 3px

              &:hover
                box-shadow inset b6 0 0 5px
                bg hsla(0,0,71,.6)
                a.toggle
                  opacity 1

              &:active
                a.toggle
                  background-position 0 -17px

              &.ui-state-active
                box-shadow inset b10 0 3px 2px
                bg hsla(0,0,71,.8)
                bb transparent
                a.toggle
                  opacity 1
                  background-position -17px 0
                &:hover
                  a.toggle
                    background-position -17px -17px

              h3.track.title
                &:before
                  content counter(tracknum) ".\0020"
                              
            dd
              bb 1px solid b20
              bg hsla(0,0,71,.8)
              box-shadow inset b10 0 -3px 2px
              pad 0 m*2
              //display none
              .track.length
                width 100%
                height 5px
                border-radius 3px
                bt 1px solid b30
                bg #fff
                box-shadow inset b15 1px 1px 2px
                position relative

                .played, .buffer, .scrub
                  position absolute
                  top 0
                  left 0
                  text-indent -999em

                .played, .buffer
                  height 5px
                  border-radius 3px

                .buffer
                  background linear-gradient(top, m59, #000)
                .played
                  background linear-gradient(top, #3382bf, #0063af)
                .scrub
                  square 7px
                  border-radius 5px
                  background linear-gradient(top, m220, m140)
                  box-shadow b30 0 1px 3px
                  top - 2px
                  border 1px solid #fff

              ul.track.stats
                mar 0 0 .25em
                li
                  display inline-block
                  fs 75%
                  &.length.played
                    width 25%
                  &.total.plays
                    width 50%
                    text-align center
                  &.length.unplayed
                    width 25%
                    text-align right

              menu.track
                mar 0 0 .75em
                position relative
                > ul
                  clearfix()
                  > li
                    float left
                    
                    &.lyrics, &.share
                      mr .8em
                      > a
                        buttondark()
                      
                    &.buy
                      text-align right
                      a
                        buttonblue()
                        
                
                

  nav.artist
    ul li a
      display block
      text-shadow w50 0 1px 0
      font bold 1em/2 sans
      text-transform uppercase
      pad 0 2em
      &:hover, &:focus
        box-shadow inset b6 0 0 5px
        bg hsla(0,0,71,.6)
      &:active
        box-shadow inset b8 0 0 5px
        bg hsla(0,0,71,.8)

ul.bgs
  li.bg img
    min-height: 100%
    min-width: 1024px
    width: 100%
    height: auto
    position: fixed
    top: 0
    left: 0
