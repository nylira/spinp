@import 'm/all'
@import 'd/all'

m = 13px

dfont()
  fs m
  lh 1.5
  ff sans
  color #333

link = #000
hover = link

a
  text-decoration none
  color link
  &:hover, &:focus
    color hover

html, body
  height 100%

body
  dfont()
  bg #000

  #spindal
    bg w80
    width 244px
    position relative
    z-index 100
    min-height 100%

    header.artist
      pad 1em 2em
      img
        width 184px
        height 72px
        bg b40

    section.albums
      ul.albums
        li.album
          section.album.cover
            pad 0 2em 1em
            img
              square 180px
              bg #fff
              pad 2px
              border-radius 2px
              box-shadow b45 2px 2px 4px

          h2.album.title
            fw bold
            pad 0 2em

          menu.tracks
            ol.tracks
              bt 1px solid b20
              bb 1px solid w40
              list-style decimal
              li.track
                bt 1px solid w40
                bb 1px solid b20
                lh m*2 - 2px
                pad 0 2em
                height m*2 - 2px
                white-space nowrap
                overflow hidden
                text-overflow ellipsis
    nav.artist
      ul li a
          display block
          text-shadow w50 0 1px 0
          font bold 1em/2 sans
          text-transform uppercase
          pad 0 2em
          &:hover, &:focus
            box-shadow inset b6 0 0 5px
            bg hsla(0,0,71,.6)
          &:active
            box-shadow inset b8 0 0 5px
            bg hsla(0,0,71,.8)

  ul.bgs
    li.bg img
      min-height: 100%
      min-width: 1024px
      width: 100%
      height: auto
      position: fixed
      top: 0
      left: 0
