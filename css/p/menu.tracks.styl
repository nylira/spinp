.menu.tracks
  .tracks.accordion
    bt 1px solid b20
    bb 1px solid w40
    counter-reset tracknum
    
    div.title
      bt 1px solid w40
      bb 1px solid b20
      pad 0 2em
      lh m*2 - 3px
      height m*2 - 3px
      cursor pointer
      counter-increment tracknum
      position relative

      h3.track.title
        white-space nowrap
        overflow hidden
        text-overflow ellipsis
        pl 1.25em
        font-size 12px

      a.toggle.play
        position absolute
        text-indent -999em
        opacity 0
        display block
        square 17px
        left 5px
        top 3px
        background url(../i/icon-play-pause.png) left top no-repeat

      &:hover
        box-shadow inset b6 0 0 5px
        bg hsla(0,0,71,.6)
        a.toggle.play
          opacity 1

      &:active
        a.toggle.play
          background-position 0 -17px

      &.ui-state-active
        box-shadow inset b10 0 3px 2px
        bg hsla(0,0,71,.8)
        bb transparent
        a.toggle.play
          opacity 1
          background-position -17px 0
        &:hover
          a.toggle.play
            background-position -17px -17px

      h3.track.title
        &:before
          content counter(tracknum) ".\0020"
          position absolute
          top 0
          left 1.5em
          text-align right
          width 1.5em
                      
    div.data
      bb 1px solid b20
      bg hsla(0,0,71,.8)
      box-shadow inset b10 0 -3px 2px
      pad 0 m*2 0 m*3.25
      display none
      position relative

      .toggle.volume
        square 25px
        position absolute
        right 1.75em
        top -25px
        text-indent -999em
        background url(../i/icon-volume.png) left top
        z-index 10000
        &:hover, &.active
          background-position 0 -25px
        &.active
          .input
            display block

        .input
          bg b80
          box-shadow inset b10 0 0 2px
          pad 3px
          border-radius 6px
          position absolute
          top -1em
          right -1em
          display none
          
          .volume
            width 80px
            height 6px
            bt 1px solid b30
            bb 1px solid b60
            border-radius 4px
            position relative
            bg m200
            box-shadow inset b20 1px 1px 2px
            .current, .slider
              position absolute
              top 0
              left 0
            .current
              background linear-gradient(top, #4d92c7, #0c6ab3)
              height 6px
              border-radius 3px
            .slider
              background url(../i/volume-slider.png) no-repeat
              square 20px
              ml -8px
              top -5px
              cursor pointer

      .track.length
        width 100%
        height 5px
        border-radius 3px
        bt 1px solid b30
        bg #fff
        box-shadow inset b15 1px 1px 2px, w30 0 1px 0
        position relative

        .played, .buffer, .slider
          position absolute
          top 0
          left 0
          text-indent -999em

        .played, .buffer
          height 5px
          border-radius 3px
        .buffer
          background linear-gradient(top, m59, #000)
        .played
          background linear-gradient(top, #3382bf, #0063af)
        .slider
          square 10px
          background url(../i/slider.png) no-repeat
          top -2px
          ml -5px
          cursor pointer

      ul.track.stats
        mar 0 0 .25em
        li
          display inline-block
          fs 75%
          &.length.played
            width 25%
          &.total.plays
            width 50%
            text-align center
          &.length.unplayed
            width 25%
            text-align right

      .menu.track
        mar 0 -6% .75em
        position relative
        > ul
          clearfix()
          > li
            display table-cell
            
            &.lyrics, &.share
              width 31%
              > a
                buttondark()

              
            &.buy
              width 49%
              a
                buttonblue()
