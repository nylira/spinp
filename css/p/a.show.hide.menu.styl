a.show.menu
  position absolute
  top m
  left 0
  z-index 1
  height 64px
  width 45px
  background url(../i/show-menu.png) left top no-repeat
  text-indent -999em
  display none
  &:hover, &:focus
    background-position 0 -64px
  &:active
    background-position 0 -128px

a.hide.menu
  display block
  position absolute
  right 0
  top m
  bg b50
  border-radius 2px 0 0 2px
  z-index 10
  transition()
  width 41px
  height 60px
  display none
  &:hover, &:focus
    bg b80
  &:active
    bg b90
